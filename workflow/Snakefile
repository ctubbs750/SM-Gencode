from snakemake.utils import min_version

min_version("7.32.4")


configfile: "config/config.yaml"


# Define modules
module fetch:
    snakefile:
        "rules/fetch.smk"
    config:
        config


module parse:
    snakefile:
        "rules/parse.smk"
    config:
        config


module genes:
    snakefile:
        "rules/genes.smk"
    config:
        config


# Import modules
use rule * from fetch as fetch_*


use rule * from genes as genes_*


use rule * from parse as parse_*


###
# Rules
###


rule all:
    input:
        rules.fetch_all.input,
        rules.parse_all.input,
        rules.genes_all.input,
    default_target: True
